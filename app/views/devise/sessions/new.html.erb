<h2>Sign in</h2>

<div class ="link"><%= link_to('ES', user_session_path(:locale=>'es')) %></td> </div>
<div class ="link"><%= link_to('EN', user_session_path(:locale=>'en')) %></td> </div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div class="field"><%= f.label :email %>
  <%= f.email_field :email %></div>

  <div class="field"><%= f.label :password %>
  <%= f.password_field :password %></div>
<br><br><br>
  <% if devise_mapping.rememberable? %>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end %>

  <div class = "actions"><%= f.submit "Sign in" %></div><br><br>
<% end %>

<%= render :partial => "devise/shared/links" %>
