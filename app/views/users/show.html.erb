
<h1>
<%=@user.name%>
's home</h1>
<p>
  <b><h2>My Posts:</h2></b>
  <% @user.posts.each do |post| %>
  <tr>
    <td><%= link_to post.title, user_post_path(@user,post) %></td>
    <td><%= link_to 'Delete', [@user,post], confirm: 'Are you sure?', method: :delete %></td><br>
  </tr>
  <% end %><br>


  <%= render 'form_new_post'%>



  <b><h2>My tags:</h2></b>
  <% tags = Tag.my_tags(session[:user_id]).order() %>
  <% tags.each do |t| %>
  <%= link_to t.label, tag_path(t.id) %>
  <% end%>
</p>