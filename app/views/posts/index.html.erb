<h1>Listing posts</h1>

<table>
  <tr>
    <th>User</th>
    <th>Content</th>
    <th>Title</th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.user_id %></td>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', user_post_path(@user,post) %></td>
    <td><%= link_to 'Edit', edit_user_post_path(@user,post) %></td>
    <td><%= link_to 'Destroy', [@user,post], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_user_post_path {(@user)}%>